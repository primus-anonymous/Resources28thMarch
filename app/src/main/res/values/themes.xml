<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Resources28thMarch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/holo_red_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_200</item>
        <!-- Customize your theme here. -->

        <item name="materialButtonStyle">@style/CalcButton</item>
        <item name="actionButtonColor">@color/teal_200</item>
    </style>

    <style name="Theme.Resources28thMarch.V2">
        <item name="materialButtonStyle">@style/CalcButton.V2</item>
        <item name="actionButtonColor">@android:color/holo_green_dark</item>
    </style>
</resources>